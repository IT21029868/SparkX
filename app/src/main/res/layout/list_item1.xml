<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Name:"
        android:textColor="#040000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Email:"
        android:textColor="#070505"
        android:textSize="14sp"
        android:textStyle="bold" />/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Contact Number:"
        android:textColor="#070101"
        android:textSize="14sp"
        android:textStyle="bold" />/>

    <TextView
        android:id="@+id/tvCheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Check in Date:"
        android:textColor="#050101"
        android:textSize="14sp"
        android:textStyle="bold" />/>

    <TextView
        android:id="@+id/tvnight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Number of Nights:"
        android:textColor="#0B0101"
        android:textSize="14sp"
        android:textStyle="bold" />/>

    <TextView
        android:id="@+id/tvcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Number of People:"
        android:textColor="#090101"
        android:textSize="14sp"
        android:textStyle="bold" />/>

    <TextView
        android:id="@+id/tvChef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Need a chef:"
        android:textColor="#0B0101"
        android:textSize="14sp"
        android:textStyle="bold" />/>

</LinearLayout>